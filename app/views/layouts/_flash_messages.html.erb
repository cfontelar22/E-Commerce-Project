<div class="flash-messages">
  <% flash.each do |key, value| %>
    <% if value.is_a?(Hash) %>
      <div class="<%= key %>">
        <%= value[:message] %>
        <% if value[:order_id] %>
          <p>Order ID: <%= value[:order_id] %></p>
        <% end %>
      </div>
    <% else %>
      <div class="<%= key %>"><%= value %></div>
    <% end %>
  <% end %>
</div>
