<h1><%= @product.name %></h1>

<div class="product-details">
  <p><%= @product.description %></p>
  <p>Price: <%= number_to_currency(@product.price) %></p>
  <p>Quantity: <%= @product.quantity %></p>
  <p>Region: <%= @product.region %></p>
  <p>Weight: <%= @product.weight %>g</p>
  <p>Roast Level: <%= @product.roast_level %></p>
  <p>Flavor Profile: [<%= @product.flavor_profile %>]</p>
  <p>Grind Option: [<%= @product.grind_option %>]</p>


  <% if @product.image.attached? %>
    <%= image_tag @product.image, class: 'product-image' %>
  <% end %>

  <%= link_to 'Back to Products', products_path, class: 'back-btn' %>
</div>
