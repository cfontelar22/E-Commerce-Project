<h1>Order History</h1>

<table>
  <thead>
    <tr>
      <th>Order ID</th>
      <th>Date</th>
      <th>Total</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.created_at.strftime("%B %d, %Y") %></td>
        <td><%= number_to_currency(order.total) %></td>
        <td><%= link_to 'View', order_path(order) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
